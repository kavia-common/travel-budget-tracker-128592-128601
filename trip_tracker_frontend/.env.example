# PUBLIC INTERFACE: Environment variables required by the Trip Tracker frontend.
# Copy this to `.env` and fill in values. Do not commit your .env.

# Firebase configuration (Mandatory for real auth; app works in Demo Mode without these)
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_APP_ID=
REACT_APP_FIREBASE_MEASUREMENT_ID=

# Optional: Backend API base URL if using a backend. Defaults to local mock if empty.
REACT_APP_API_BASE_URL=

# Site URL used for auth email redirects (if applicable)
REACT_APP_SITE_URL=http://localhost:3000
